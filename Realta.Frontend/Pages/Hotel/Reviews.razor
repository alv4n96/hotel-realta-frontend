    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createhotelLabel">Create Hotel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card-style mb-30">
                    <div class="input-style-1">
                        <label>Hotel Name</label>
                        <input type="text" placeholder="Full Name">
                    </div>

                    <div class="input-style-1">
                        <label>Phone Number</label>
                        <input type="text" placeholder="Phone Number">
                    </div>

                    <div class="select-style-1">
                        <label>Status</label>
                        <div class="select-position">
                            <select>
                                <option hidden>Choose status hotel</option>
                                <option value="">Active</option>
                                <option value="">Disactive</option>
                            </select>
                        </div>
                    </div> <!-- end input -->

                    <div class="input-style-3">
                        <label>City</label>
                        <input type="text" placeholder="City">
                        <span class="icon mt-30">
                            <i class="lni lni-search-alt"></i>
                        </span>
                    </div>

                    <div class="input-style-1">
                        <label>Address</label>
                        <textarea placeholder="Address" rows="3"></textarea>
                    </div>


                    <div class="input-style-1">
                        <label>Hotel Description</label>
                        <textarea placeholder="Hotel Description" rows="3"></textarea>
                    </div>
                    <!-- end input -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>


<!--Switch Status-->
<div class="modal fade" id="switchstatushotel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="switchstatushotelLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="switchstatushotelLabel">Edit Status Hotel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card-style mb-30">

                    <div class="select-style-1">
                        <label>Status</label>
                        <div class="select-position">
                            <select>
                                <option hidden>Choose status hotel</option>
                                <option value="">Active</option>
                                <option value="">Disactive</option>
                            </select>
                        </div>
                    </div> <!-- end input -->

                    <div class="input-style-1">
                        <label>Reason Status</label>
                        <textarea placeholder="Hotel Description" rows="3"></textarea>
                    </div>
                    <!-- end input -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>

<!--Delete Hotel-->
<div class="warning-modal">
    <div class="modal fade" id="@($"delete")" tabindex="-1" aria-hidden="true" role="dialog" style="display: none;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content card-style warning-card text-center">
                <div class="modal-body">
                    <div class="icon text-danger mb-20">
                        <i class="lni lni-warning"></i>
                    </div>
                    <div class="content mb-30">
                        <h3 class="mb-15">
                            Anda akan menghapus Review ini?
                        </h3>
                        <p class="text-sm text-medium">
                            Cancel untuk Membatalkan
                        </p>
                    </div>
                    <div class="action d-flex flex-wrap justify-content-center">
                        <button type="button" data-bs-dismiss="modal" class="main-btn dark-btn-outline btn-hover m-1">
                            Cancel
                        </button>
                        <button data-bs-dismiss="modal" class="main-btn danger-btn-outline btn-hover m-1">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


