@page "/hotel/{HotelId:int}/facility/{FaciId:int}/History"

@using Realta.Frontend.Components.Hotel
@using System.Globalization

<PageTitle>Facility History</PageTitle>

<section class="table-components">
    <div class="container-fluid">
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title">
                        <h2>Facility History</h2>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper mb-30">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/hotel">Hotels</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/hotel/@(HotelId)/facilities">Facilities</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    History
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <!-- end col -->
            </div>
            <!-- end row -->
        </div>


        <CardHotel HotelData="HotelData"/>

        <div class="invoice-card card-style mb-30">
            <div class="invoice-header">
                <div class="invoice-for">
                    <h2 class="mb-10">@FacilitiesData.FaciName</h2>
                    <p class="text-sm">
                        @FacilitiesData.FaciDescription
                    </p>
                </div>
                <div class="invoice-date text-end">
                    <p>
                        @FacilitiesData.FaciRoomNumber
                    </p>
                </div>
            </div>
        </div>

    <div class="card-style ">
        
        
        <!-- Put Component Search Here -->

        <!-- End Title -->
        <div class="table-responsive">
            <table class="table top-selling-table">
                <thead>
                <tr>
                    @* <th> *@
                    @*     <h6 class="text-sm text-medium text-center">Id</h6> *@
                    @* </th> *@
                    @* <th class="min-width"> *@
                    @*     <h6 class="text-sm text-medium text-center"> *@
                    @*         Expose Price *@
                    @*     </h6> *@
                    @* </th> *@
                    <th class="min-width">
                        <h6 class="text-sm text-medium text-center">
                            Start Date
                        </h6>
                    </th>
                    <th class="min-width">
                        <h6 class="text-sm text-medium text-center">
                            End Date
                        </h6>
                    </th>
                    <th class="min-width">
                        <h6 class="text-sm text-medium text-center">
                            Low Price
                        </h6>
                    </th>
                    <th class="min-width">
                        <h6 class="text-sm text-medium text-center">
                            Rate Price
                        </h6>
                    </th>
                    <th class="min-width">
                        <h6 class="text-sm text-medium text-center">
                            High Price
                        </h6>
                    </th>
                    <th class="min-width">
                        <h6 class="text-sm text-medium text-center">
                            Discount
                        </h6>
                    </th>
                    <th class="min-width">
                        <h6 class="text-sm text-medium text-center">
                            Tax Rate
                        </h6>
                    </th>
                    <th class="min-width">
                        <h6 class="text-sm text-medium text-center">
                            Modified Date
                        </h6>
                    </th>
                    @* <th> *@
                    @*     <div class="action justify-content-end" data-bs-toggle="modal" data-bs-target="#createhotel"> *@
                    @*         <a class="main-btn primary-btn-outline rounded-btn p-2"> *@
                    @*             <i class="mdi mdi-home-plus"></i> Add *@
                    @*         </a> *@
                    @*     </div> *@
                    @* </th> *@
                </tr>
                </thead>


                <tbody>

                @if (HistoryData.Count() > 0)
                {
                    foreach (var history in    HistoryData)
                    {
                        <tr>
                            @* <td> *@
                            @*     <div class="text-center"> *@
                            @*         @if (history. == 1) *@
                            @*         { *@
                            @*         <span class="status-btn success-btn">Low Price</span> *@
                            @*         } *@
                            @*         else if (exposeRandNumber == 2) *@
                            @*         { *@
                            @*         <span class="status-btn active-btn">Rate Price</span> *@
                            @*         } *@
                            @*         else if (exposeRandNumber == 3) *@
                            @*         { *@
                            @*         <span class="status-btn warning-btn">High Price</span> *@
                            @*         } *@
                            @* *@
                            @*         } *@
                            @*         } *@
                            @*     </div> *@
                            @* </td> *@
                            <td class="ml-50 mr-50">
                                <p class="text-sm text-center">@((history.FaphStartdate).ToString("dd MMMM yyyy"))</p>
                            </td>
                            <td class="ml-50 mr-50">
                                <p class="text-sm text-center">@((history.FaphEnddate).ToString("dd MMMM yyyy"))</p>
                            </td>
                            <td>
                                <p class="text-sm text-center">@history.FaphLowPrice.ToString("C0", new CultureInfo("id-ID"))</p>
                            </td>
                            <td>
                                <p class="text-sm text-center">@history.FaphRatePrice.ToString("C0", new CultureInfo("id-ID"))</p>
                            </td>
                            <td>
                                <p class="text-sm text-center">@history.FaphHighPrice.ToString("C0", new CultureInfo("id-ID"))</p>
                            </td>
                            <td>
                                @if (history.FaphDiscount != 0)
                                {
                                    <p class="text-sm text-center">@history.FaphDiscount.ToString("0.#") %</p>
                                }
                                else
                                {
                                    <p class="text-sm text-center"> - </p>
                                }
                            </td>

                            <td>
                                @if (history.FaphTaxRate != 0)
                                {
                                    <p class="text-sm text-center">@history.FaphTaxRate.ToString("0.#") %</p>
                                }
                                else
                                {
                                    <p class="text-sm text-center"> - </p>
                                }
                            </td>

                            <td>
                                <p class="text-sm text-center">@((history.FaphModifiedDate).ToString("dd MMMM yyyy HH:mm"))</p>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
            <!-- End Table -->
        </div>
        
<Pagination MetaData="MetaData" Spread="1" SelectedPage="SelectedPage"/>
    </div>
    </div>
</section>

<!-- Edit Hotel -->
<div class="modal fade" id="edithotel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="edithotelLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="edithotelLabel">Edit Hotel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card-style mb-30">
                    <div class="input-style-1">
                        <label>Hotel Name</label>
                        <input type="text" placeholder="Full Name">
                    </div>

                    <div class="input-style-1">
                        <label>Phone Number</label>
                        <input type="text" placeholder="Phone Number">
                    </div>

                    <div class="select-style-1">
                        <label>Status</label>
                        <div class="select-position">
                            <select>
                                <option hidden>Choose status hotel</option>
                                <option value="">Active</option>
                                <option value="">Disactive</option>
                            </select>
                        </div>
                    </div> <!-- end input -->

                    <div class="input-style-3">
                        <label>City</label>
                        <input type="text" placeholder="City">
                        <span class="icon mt-30">
                            <i class="lni lni-search-alt"></i>
                        </span>
                    </div>

                    <div class="input-style-1">
                        <label>Address</label>
                        <textarea placeholder="Address" rows="3"></textarea>
                    </div>


                    <div class="input-style-1">
                        <label>Hotel Description</label>
                        <textarea placeholder="Hotel Description" rows="3"></textarea>
                    </div>
                    <!-- end input -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>

